vertices_first  = coords(:, edges(1,:)+1)';
vertices_second = coords(:, edges(2,:)+1)';
orientations    = edges(3, :);

figure();
scatter(coords(2,:),coords(1,:),'.')
hold on;
for v=1:size(vertices_first,1)
    orient = orientations(v);
    if orient==1
    plot([vertices_first(v,2),vertices_second(v,2)],[vertices_first(v,1),vertices_second(v,1)]);
end
